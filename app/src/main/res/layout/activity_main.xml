<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_layout_id"
    tools:context="com.riyan.form_pendaftaran.MainActivity"
    android:orientation="vertical"
    android:padding="16dp">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FORM PENDAFTARAN"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Silahkan isi form pendaftaran berikut ini dengan benar"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nama"
                    android:id="@+id/etNama"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:lines="3"
                    android:gravity="top|left"
                    android:hint="Alamat"
                    android:id="@+id/etAlamat"/>

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kelas"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rg_kelas">


                    <RadioButton
                        android:text="Teknik informatika"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:text="Informasi komputer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:text="Adm. bisnis"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hobi"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

                    <CheckBox
                        android:text="Musik"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ch_musik"/>

                    <CheckBox
                        android:text="Olah raga"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ch_olahraga"/>
                    <CheckBox
                        android:text="Membaca"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ch_membaca"/>

            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reset"
                    android:layout_weight="1"
                    android:id="@+id/btReset"
                    android:backgroundTint="@color/colorAccent"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Simpan"
                    android:layout_weight="1"
                    android:id="@+id/btSimpan"
                    android:backgroundTint="@color/colorPrimary"/>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>